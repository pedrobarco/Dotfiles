for_window [class="^.*"] border pixel 5
# for_window [class="^.*"] border normal 0
# for_window [class=".*"] title_format "<span font='Envypn 11'> ≔ %title</span>"
gaps inner 12
gaps outer 5
smart_borders yes
# hide_edge_borders both
# smart_gaps yes

#--------------
# BAR SETTINGS
#--------------

#                       BORDER      BACKGROUND  TEXT        INDICATOR   CHILD_BORDER
client.focused          $magenta    $magenta    $black      $magenta     $magenta
client.unfocused        $black      $black      $white      $black       $black 
client.focused_inactive $black      $black      $white      $black       $black  
client.urgent           $green      $green      $black      $black       $black
client.background       $black

bar {
position top
status_command i3blocks
# i3bar_command i3bar -t
separator_symbol "*"
strip_workspace_numbers yes
tray_output none
height 32
   colors {
       	statusline         $white
        background         $black
        separator          $magenta

#                          BORDER       BACKGROUND   TEXT
        focused_workspace  $magenta     $magenta     $black
        inactive_workspace $black       $black       $white
        active_workspace   $black       $black       $white
        urgent_workspace   $green       $green       $black
        binding_mode       $magenta     $magenta     $black
    }
}

